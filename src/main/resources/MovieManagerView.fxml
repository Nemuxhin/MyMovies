<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="768" prefWidth="1150" stylesheets="@gui/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MovieController">

    <top>
        <ToolBar styleClass="top-toolbar">
            <Label styleClass="app-title" text="Movie Manager" />

            <Region HBox.hgrow="ALWAYS" />

            <HBox spacing="5" alignment="CENTER_LEFT">
                <TextField fx:id="txtSearch" prefWidth="300" promptText="Search title or category..." />

                <TextField fx:id="txtMinImdb" prefWidth="100" promptText="Min IMDb" />

                <Button fx:id="btnSearch" styleClass="accent-button, icon-button" text="ðŸ”" />
                <Button fx:id="btnClearSearch" styleClass="button, icon-button" text="âœ•" />
            </HBox>

            <Separator orientation="VERTICAL" />

            <HBox spacing="5">
                <Button fx:id="btnAddMovie" styleClass="accent-button, icon-button" text="ï¼‹" />
                <Button fx:id="btnEditMovie" styleClass="accent-button, icon-button" text="âœŽ" />
                <Button fx:id="btnDeleteMovie" styleClass="button, icon-button" text="ðŸ—‘" />
            </HBox>
        </ToolBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.3">

            <VBox spacing="15" styleClass="sidebar">

                <Label styleClass="header-label" text="Movie Details" />

                <VBox spacing="5">
                    <Label styleClass="field-label" text="Title" />
                    <TextField fx:id="txtTitle" promptText="Movie title" />
                </VBox>

                <HBox spacing="10">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="IMDb Rating" />
                        <TextField fx:id="txtImdb" promptText="e.g., 8.5" />
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="Personal Rating" />
                        <TextField fx:id="txtPersonal" promptText="e.g., 9.0" />
                    </VBox>
                </HBox>

                <VBox spacing="5" VBox.vgrow="ALWAYS">
                    <Label styleClass="field-label" text="Categories (Hold Ctrl for multiple)" />
                    <ListView fx:id="lstCategories" VBox.vgrow="ALWAYS" styleClass="list-view" />
                    <HBox spacing="10">
                        <Button fx:id="btnAddCategory" onAction="#handleAddCategory" styleClass="button, small-button" text="New Cat" />
                        <Button fx:id="btnDeleteCategory" onAction="#handleDeleteCategory" styleClass="button, small-button" text="Del Cat" />
                    </HBox>
                </VBox>

                <VBox spacing="5">
                    <Label styleClass="field-label" text="File Path" />
                    <HBox spacing="5">
                        <TextField fx:id="txtFile" HBox.hgrow="ALWAYS" maxWidth="Infinity" promptText="C:/Movies/..." />
                        <Button fx:id="btnBrowse" styleClass="accent-button, icon-button" text="..." />
                    </HBox>
                </VBox>

                <Separator />

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button fx:id="btnCancel" styleClass="button" text="Cancel" prefWidth="80" />
                    <Button fx:id="btnSave" styleClass="accent-button" text="Save Movie" prefWidth="100" />
                </HBox>
            </VBox>

            <VBox spacing="10" styleClass="content-area">
                <HBox alignment="CENTER_LEFT">
                    <Label styleClass="header-label" text="Library" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label styleClass="field-label" text="Double-click to play" />
                </HBox>

                <TableView fx:id="tblMovies" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colTitle" text="Title" prefWidth="200" />
                        <TableColumn fx:id="colImdb" text="IMDb" prefWidth="70" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colPersonal" text="Personal" prefWidth="70" style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colCategory" text="Category" prefWidth="150" />
                        <TableColumn fx:id="colLastView" text="Last View" prefWidth="100" style="-fx-alignment: CENTER;" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox styleClass="status-bar">
            <Label fx:id="lblStatus" styleClass="field-label" text="Ready" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblCount" styleClass="field-label" />
        </HBox>
    </bottom>

</BorderPane>