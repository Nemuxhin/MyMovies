            <Label style="-fx-text-fill: #F5C518; -fx-font-size: 18px; -fx-font-weight: 900; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.95), 2.2, 1.0, 0, 0);" text="Movie Manager" />

            <Region HBox.hgrow="ALWAYS" />

            <TextField fx:id="txtSearch" prefWidth="320" promptText="Search..." style="-fx-background-color: rgba(255,255,255,0.92); -fx-text-fill: #0F1114; -fx-font-size: 13px; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #F5C518; -fx-border-width: 1.6; -fx-padding: 12 14 12 14;" />

            <Button fx:id="btnSearch" style="-fx-background-color: #F5C518; -fx-text-fill: #0F1114; -fx-font-weight: 900; -fx-font-size: 14px; -fx-min-width: 46; -fx-min-height: 42; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8.0, 0.20, 0, 2); " text="ðŸ”" />

