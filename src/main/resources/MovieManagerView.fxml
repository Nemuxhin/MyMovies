            <Button fx:id="btnEditMovie" style="-fx-background-color: #F5C518; -fx-text-fill: #0F1114; -fx-font-weight: 900; -fx-font-size: 14px; -fx-min-width: 46; -fx-min-height: 42; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8.0, 0.20, 0, 2); " text="âœŽ" />

            <Button fx:id="btnDeleteMovie" style="-fx-background-color: #F5C518; -fx-text-fill: #0F1114; -fx-font-weight: 900; -fx-font-size: 14px; -fx-min-width: 46; -fx-min-height: 42; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8.0, 0.20, 0, 2); " text="ðŸ—‘" />
        </ToolBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.28">

            <VBox spacing="10" style="-fx-background-color: rgba(15,17,20,0.92); -fx-padding: 16; -fx-border-color: rgba(245,197,24,0.3); -fx-border-width: 0 1 0 0;">

                <Label style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 900; -fx-effect: dropshadow(gaussian, black, 1.8, 1, 0, 0);" text="Details" />

                <Label style="-fx-text-fill: white; -fx-font-size: 12px; -fx-effect: dropshadow(gaussian, black, 1.4, 1, 0, 0);" text="Title" />
                <TextField fx:id="txtTitle" style="-fx-background-color: rgba(255,255,255,0.10); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.60); -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #F5C518; -fx-border-width: 1.4; -fx-padding: 12 14 12 14; -fx-font-size: 13px;" />

                <Label style="-fx-text-fill: white; -fx-font-size: 12px; -fx-effect: dropshadow(gaussian, black, 1.4, 1, 0, 0);" text="IMDb rating" />
                <TextField fx:id="txtImdb" style="-fx-background-color: rgba(255,255,255,0.10); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.60); -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #F5C518; -fx-border-width: 1.4; -fx-padding: 12 14 12 14; -fx-font-size: 13px;" />

                <Label style="-fx-text-fill: white; -fx-font-size: 12px; -fx-effect: dropshadow(gaussian, black, 1.4, 1, 0, 0);" text="Personal rating" />
