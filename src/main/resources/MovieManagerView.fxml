            <VBox spacing="10" style="-fx-padding: 16; -fx-background-color: rgba(15,17,20,0.10);">
                <Label style="-fx-text-fill: #0F1114; -fx-font-size: 14px; -fx-font-weight: 900;" text="Movies" />

                <TableView fx:id="tblMovies" style="-fx-background-color: rgba(15,17,20,0.12); -fx-background-radius: 14; -fx-border-radius: 14; -fx-border-color: #F5C518; -fx-border-width: 1.2;">
                    <columns>
                        <TableColumn fx:id="colTitle" text="Title" />
                        <TableColumn fx:id="colImdb" text="IMDb" />
                        <TableColumn fx:id="colPersonal" text="Personal" />
                        <TableColumn fx:id="colCategory" text="Category" />
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-background-color: rgba(15,17,20,0.92); -fx-padding: 10 16 10 16;">
            <Label fx:id="lblStatus" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-effect: dropshadow(gaussian, black, 1.4, 1, 0, 0);" text="Ready" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblCount" style="-fx-text-fill: white; -fx-font-size: 12px; -fx-effect: dropshadow(gaussian, black, 1.4, 1, 0, 0);" />
        </HBox>
