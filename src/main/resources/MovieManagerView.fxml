                <ComboBox fx:id="cbCategory" style="-fx-background-color: rgba(255,255,255,0.10); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.60); -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #F5C518; -fx-border-width: 1.4; -fx-padding: 12 14 12 14; -fx-font-size: 13px;" />

                <HBox spacing="10">
                    <Button fx:id="btnSave" style="-fx-background-color: #F5C518; -fx-text-fill: #0F1114; -fx-font-weight: 900; -fx-font-size: 14px; -fx-min-width: 46; -fx-min-height: 42; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8.0, 0.20, 0, 2); " text="ðŸ’¾" />
                    <Button fx:id="btnCancel" style="-fx-background-color: rgba(255,255,255,0.10); -fx-text-fill: white; -fx-font-weight: 900; -fx-font-size: 14px; -fx-min-width: 46; -fx-min-height: 42; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #F5C518; -fx-border-width: 1.4; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8.0, 0.20, 0, 2);" text="â†©" />
